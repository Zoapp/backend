{
    "extends": [
        "airbnb-base",
        "prettier"
    ],
    "env": {
        "browser": false,
        "es6": true,
        "jquery": false,
        "mocha": true,
        "node": true
    },
    "globals": {
        "logger": true
    },
    "parser": "babel-eslint",
    "parserOptions": {
        "ecmaVersion": 6,
        "ecmaFeatures": {
            "experimentalObjectRestSpread": true
        },
        "sourceType": "module"
    },
    "plugins": [
        "import",
        "prettier"
    ],
    "rules": {
        "quotes": [
            "error",
            "double"
        ],
        "semi": [
            "error",
            "always"
        ],
        "no-console": 1,
        "prefer-const": "error",
        "no-var": "error",
        "prettier/prettier": ["error", {
            "arrowParens": "always",
            "trailingComma": "all"
        }]
    }
}
